\ProvidesPackage{my_listings}

\RequirePackage{listings}
\RequirePackage{xcolor}

% Colori personalizzati
\definecolor{prismKeyword}{RGB}{0,0,150}
\definecolor{prismConst}{RGB}{120,0,0}
\definecolor{prismType}{RGB}{0,100,0}
\definecolor{prismComment}{RGB}{100,100,100}
\definecolor{prismBackground}{RGB}{248,248,248}

% Linguaggio PRISM per listings
\lstdefinelanguage{prism}{
  morekeywords={
    module, endmodule, const, formula, init, true, false,
    global, label, rewards, endrewards, prob, dtmc, ctmc,
    min, max
  },
  morekeywords=[2]{double,int,bool}, % tipi
  morekeywords=[3]{s,cl,cm,ce}, % variabili tipiche di modelli (modificabili)
  sensitive=true,
  morecomment=[l]{//},
  morecomment=[s]{/*}{*/},
  morestring=[b]",
}

% Stile PRISM
\lstdefinestyle{prismStyle}{
  language=prism,
  backgroundcolor=\color{prismBackground},
  basicstyle=\ttfamily\small,
  keywordstyle=\color{prismKeyword}\bfseries,
  keywordstyle=[2]\color{prismType}\bfseries,
  keywordstyle=[3]\color{prismConst},
  commentstyle=\color{prismComment}\itshape,
  stringstyle=\color{prismConst},
  numberstyle=\tiny\color{gray},
  numbers=left,
  breaklines=true,
  tabsize=2,
  frame=single,
  rulecolor=\color{gray},
  showstringspaces=false
}